	<?php $__env->startSection('scripts'); ?> 
        <script type="text/javascript">
            function deleteTask(obj) {
                bootbox.confirm('Are you sure?', function(result) {
                    if (result) {
                        location.href=$(obj).attr('data-url');
                    }
                });    
            }
        </script>
